<div class="container w-50 mt-5 border border-primary">
    <div class="row">
        <div class="col">
            <form class="mt-3 p-4" action="/create" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <div class="form-group row align-middle">
                    <label for="nombre" class="col-sm-4 col-form-label">Your Name:</label>
                    <div class="col-sm-8">
                    <input type="text" class="form-control" id="nombre" placeholder="" name="data[nombre]">
                    </div>
                </div>
                <div class="form-group row align-middle">
                    <label for="dojo" class="col-sm-4 col-form-label">Dojo Location:</label>
                    <div class="col-sm-8">
                        <select class="form-control" id="dojo" name="data[dojo]">
                            <option>Mountain View, CA</option>
                            <option>Seattle, WA</option>
                            <option>New York, NY</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row align-middle">
                    <label for="language" class="col-sm-4 col-form-label">Favorite Language:</label>
                    <div class="col-sm-8">
                        <select class="form-control" id="language" name="data[lenguaje]">
                            <option>JavaScript</option>
                            <option>Ruby</option>
                            <option>Python</option>
                            <option>Java</option>
                            <option>PHP</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Comments (optional)</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="data[comentario]"></textarea>
                </div>
                <div class="form-group row align-middle">
                    <div class="col-sm">
                    <button type="submit" class="btn btn-primary float-right" value="Sub">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

