<% content_for :left_column do %>
    <h1>All Posts</h1>
    <table class="table table-striped table-bordered table-condensed mb-2">
    <thead>
        <tr>
        <th>Title</th>
        <th>Content</th>
        <th>User</th>
        </tr>
    </thead>

    <tbody>
        <% @publicaciones.each do |p| %>
        <tr>
            <td><%= p.titulo %></td>
            <td><%= p.contenido %></td>
            <td><%= "#{p.usuario.nombre} #{p.usuario.apellido}" %></td>
        </tr>
        <% end %>
    </tbody>
    </table>

<% end %>

<% content_for :middle_column do %>
    <h1>New Post</h1>
    <%= form_for @publicacion do |post| %>
        <div class="form-group row">
            <%= post.label 'Title: ', class:"col-sm-12 col-form-label p-0"%>
            <%= post.text_field :titulo, class:"col-sm-11 form-control" %><br/>
        </div>
        <div class="form-group row">
            <%= post.label 'Content: ', class:"col-sm-12 col-form-label p-0"%>
            <%= post.text_area :contenido, class:"col-sm-11 form-control" %><br/>
        </div>
        <div class="form-group row">
            <%= post.label 'User: ', class:"col-sm-12 col-form-label p-0"%>
            <%= post.select :usuario_id, @user_name, class:"col-sm-12 form-control" %>
        </div>
        <div class="form-group row">
            <%= post.submit 'Submit', class:"btn btn-primary"%>
        </div>
    <% end %>
<% end %>

<% content_for :rigth_column do %>
    <h1>Go to Users Page</h1>
    <%= link_to "<button class='btn btn-info'>All Users</button>".html_safe, '/usuarios', class:"row" %>
<% end %>