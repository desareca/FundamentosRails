<h1>Nuevo Usuario</h1>

<%= form_for @usuario, url: {action: "create"}, html: {class: "nifty_form"} do |u| %>
    <%= u.label :first_name %><br>
    <%= u.text_field :first_name %><br>
    <%= u.label :last_name %><br>
    <%= u.text_field :last_name %><br><br>
    <%= u.submit "Create" %>
<% end %>

<%= link_to 'Back', users_path %>

